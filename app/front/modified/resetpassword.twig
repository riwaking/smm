{% include 'header.twig' %}

<link rel="stylesheet" href="/css/auth-pages.css">

<div class="auth-page">
  <div class="auth-container">
    <div class="auth-card">
      <div class="auth-header">
        <div class="auth-logo">
          <i class="fas fa-key"></i>
        </div>
        <h1>Reset Password</h1>
        <p>Enter your email or username and we'll send you a reset link</p>
      </div>
      
      {% if PageText %}
      <div class="auth-alert auth-alert-success">
        <i class="fas fa-info-circle"></i>
        {{ contentText }}
      </div>
      {% endif %}
      
      {% if errorText %}
      <div class="auth-alert auth-alert-error">
        <i class="fas fa-exclamation-circle"></i>
        {{ errorText }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      {% endif %}
      
      {% if successText %}
      <div class="auth-alert auth-alert-success">
        <i class="fas fa-check-circle"></i>
        {{ successText }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      {% endif %}
      
      <form id="resetPasswordForm" class="auth-form" method="post" action="/resetpassword">
        <div class="form-group">
          <label for="user">Email or Username</label>
          <input type="text" class="form-control" id="user" name="user" value="{{ data['user'] }}" placeholder="{{ lang['resetpassword.user.placeholder'] }}" required>
        </div>
        
        {% if captcha %}
        <div class="g-recaptcha" data-sitekey="{{ captchaKey }}"></div>
        {% endif %}
        
        <button type="submit" class="btn-submit">{{ lang['resetpassword.button'] }}</button>
      </form>
      
      <div class="auth-footer">
        <p>Remember your password? <a href="/auth">Back to Login</a></p>
      </div>
    </div>
  </div>
</div>

{% include 'footer.twig' %}
