{% include 'header1.twig' %}


		<style>
	.affi-wrap {
        text-align: center;
        padding: 25px;
        box-shadow: 0px 0px 6px 0px #e06c41;
        border-radius: 8px;
    }
  	.affi-icon i {
        font-size: 45px;
        margin-bottom: 20px;
        color: #e06c41;
    }
  	.affi-title h2 {
        font-size: 30px;
        color: #3c4464;
    }
  	.affi-desc p {
        color: #3c4464;
    }
  	.btn.referal-btn {
        margin: auto;
        display: block;
        background-color: #f37634;
        color: #fff;
        border-radius: 100px;
