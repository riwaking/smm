                                    <tr>
                                        <th>Referral link</th>
                                        <th>Commission rate</th>
                                        <th>Minimum payout</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><a id="referal-link" type="button" class="btn btn-defualt affi-btn" data-toggle="modal" data-target="#exampleModal">{{ site["url"] }}/affiliates?ref={{ user['ref_code'] }} </a><button class="btn referal-btn" data-clipboard-text="{{ site["url"] }}/affiliates?ref={{ user['ref_code'] }}">
                Copy Referral link
            </button></td>
                                        <td>2%</td>
										<td>$ 10</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="well">
                        <div class="table-responsive">
                            <table class="table ">
