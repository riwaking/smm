{% if settings['register_page'] == 2 %}
{% include 'header.twig' %}

<link rel="stylesheet" href="/css/auth-pages.css">

<div class="auth-page">
  <div class="auth-container">
    <div class="auth-card">
      <div class="auth-header">
        <div class="auth-logo">
          <i class="fas fa-user-plus"></i>
        </div>
        <h1>Create Account</h1>
        <p>Join {{ site["site_name"] }} and start growing your social media presence</p>
      </div>
      
      {% if errorText %}
      <div class="auth-alert auth-alert-error">
        <i class="fas fa-exclamation-circle"></i>
        {{ errorText }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      {% endif %}
      
      {% if successText %}
      <div class="auth-alert auth-alert-success">
        <i class="fas fa-check-circle"></i>
        {{ successText }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      {% endif %}
      
      <form class="auth-form" action="" method="post" id="signupForm">
        <div class="form-group">
          <label for="name">Full Name</label>
          <input type="text" class="form-control" id="name" name="name" value="{{ data['name'] }}" placeholder="Enter your full name">
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control" id="username" name="username" value="{{ data['username'] }}" placeholder="Choose username" required>
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="{{ data['email'] }}" placeholder="Your email" required>
          </div>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Create password" required>
          </div>
          <div class="form-group">
            <label for="confirm">Confirm Password</label>
            <input type="password" class="form-control" id="confirm" name="password_again" placeholder="Confirm password" required>
          </div>
        </div>
        
        <div class="form-group">
          <label for="telephone">Phone / WhatsApp</label>
          <input type="text" class="form-control" id="telephone" name="telephone" value="{{ data['telephone'] }}" placeholder="Your phone number (optional)">
        </div>
        
        <div class="auth-checkbox">
          <input type="checkbox" name="terms" id="terms" value="1" checked>
          <label for="terms">{{ lang['signup.accept_terms_text'] }}</label>
        </div>
        
        {% if captcha %}
        <div class="g-recaptcha" data-sitekey="{{ captchaKey }}"></div>
        {% endif %}
        
        <input type="hidden" name="singup" value="Sign Up">
        <button type="submit" class="btn-submit">Create Account</button>
      </form>
      
      {% if google_login_content %}
      <div class="auth-divider">
        <span>or</span>
      </div>
      <button type="button" class="auth-google-btn" onclick="window.location.href='?login-with-google'">
        <i class="fab fa-google"></i>
        Sign up with Google
      </button>
      {% endif %}
      
      <div class="auth-footer">
        <p>Already have an account? <a href="/auth">Login</a></p>
      </div>
    </div>
  </div>
</div>

{% include 'footer.twig' %}
{% endif %}
